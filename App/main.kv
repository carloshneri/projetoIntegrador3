
Gerenciador


<Gerenciador>:
    MDScreen:
        Tela:
    
  
<Tela>:
    canvas.before:
        Color:
            rgba:(17/255, 186/255, 253/255,1)
        Rectangle:
            pos: self.pos
            size:self.size

    MDTextField:
        id:Texto_municipio
        size_hint_x: .5
        pos_hint:{'center_x':0.5, 'center_y':0.6}
        hint_text:'Municipio'
        hint_text_color_normal:'white'
        hint_text_color_focus:'white'
        text_color_normal: "white"
        text_color_focus: 'white'
        line_color_normal:'white'
        line_color_focus:'white'
    MDTextField:
        id:Texto_medicamento
        size_hint_x: .5
        pos_hint:{'center_x':0.5, 'center_y':0.5}
        hint_text:'Medicamento'
        hint_text_color_normal:'white'
        hint_text_color_focus:'white'
        text_color_normal: "white"
        text_color_focus: 'white'
        line_color_normal:'white'
        line_color_focus:'white'

    MDFillRoundFlatButton:
        id:Botao_pesquisa
        text: 'Pesquisar'
        pos_hint:{'center_x': 0.8, 'center_y':0.3 }
